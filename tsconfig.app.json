{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    // Gradually enabling strict mode - start with safer options
    "strict": false, // Keep false for now to avoid breaking changes, but enable individual strict checks
    "noUnusedLocals": false, // Keep false for now
    "noUnusedParameters": false, // Keep false for now
    "noImplicitAny": false, // Keep false for now
    "noFallthroughCasesInSwitch": true, // Enable this for better switch statement safety
    "strictNullChecks": false, // Keep false for now, but consider enabling in future
    "strictFunctionTypes": true, // Enable for better function type checking
    "strictBindCallApply": true, // Enable for better bind/call/apply type checking
    "strictPropertyInitialization": false, // Keep false for now
    "noImplicitThis": true, // Enable to catch implicit 'this' issues
    "alwaysStrict": false, // Keep false for now

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
